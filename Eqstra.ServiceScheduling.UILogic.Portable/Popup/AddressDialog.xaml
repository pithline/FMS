<ContentDialog x:Class="Eqstra.ServiceScheduling.AddressDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:local="using:Eqstra.ServiceScheduling"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               mc:Ignorable="d"
               PrimaryButtonText="ok"
               SecondaryButtonText="cancel"
               PrimaryButtonClick="OK_PrimaryButtonClick"
               SecondaryButtonClick="Cancel_SecondaryButtonClick">
    <ContentDialog.TitleTemplate>
        <DataTemplate>
            <TextBlock Text="ADDRESS"
                       Style="{StaticResource GroupHeaderStyle}" />
        </DataTemplate>
    </ContentDialog.TitleTemplate>

    <ScrollViewer ZoomMode="Disabled"
                  x:Name="scrlAdd"
                  ScrollViewer.IsScrollInertiaEnabled="True"
                  ScrollViewer.IsVerticalRailEnabled="True"
                  ScrollViewer.VerticalScrollMode="Enabled"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Visibility="{Binding ProgressbarVisiblity}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Orientation="Horizontal">
                <ProgressBar Width="700"
                             Height="15"
                             IsIndeterminate="True" />
                <TextBlock Text="{Binding ProgressbarMessage}"
                           VerticalAlignment="Center"
                           FontSize="15" />
            </StackPanel>


            <ComboBox  Height="70"
                       Header="Country"
                       Width="310"
                       ItemsSource="{Binding Countries}"
                       SelectedItem="{Binding SelectedCountry,Mode=TwoWay}"
                       Margin="2"
                       DisplayMemberPath="Name"
                       SelectionChanged="country_SelectionChanged"
                       x:Name="country"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />

            <TextBox Header="Street :"
                     Text="{Binding Street,Mode=TwoWay}"
                     Grid.Row="1"
                     Width="310"
                     Height="150"
                     AcceptsReturn="True"
                     IsSpellCheckEnabled="True"
                     IsTextPredictionEnabled="True"
                     Margin="0 10" />

            <ComboBox  Height="70"
                       Header="Province"
                       Grid.Row="2"
                       Width="310"
                       ItemsSource="{Binding Provinces}"
                       SelectedItem="{Binding Selectedprovince,Mode=TwoWay}"
                       DisplayMemberPath="Name"
                       Margin="2"
                       Name="Provinces"
                       SelectionChanged="Provinces_SelectionChanged"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />

            <ComboBox  Height="70"
                       Grid.Row="3"
                       Header="City"
                       Width="310"
                       ItemsSource="{Binding Cities}"
                       SelectedItem="{Binding SelectedCity,Mode=TwoWay}"
                       DisplayMemberPath="Name"
                       Margin="2"
                       x:Name="City"
                       SelectionChanged="City_SelectionChanged"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />

            <ComboBox  Height="70"
                       Grid.Row="4"
                       Header="Suburb"
                       Width="310"
                       ItemsSource="{Binding Suburbs}"
                       SelectedItem="{Binding SelectedSuburb,Mode=TwoWay}"
                       DisplayMemberPath="Name"
                       x:Name="suburb"
                       SelectionChanged="suburb_SelectionChanged"
                       Margin="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />


            <ComboBox  Height="70"
                       Header="Zip"
                       Grid.Row="5"
                       Width="310"
                       ItemsSource="{Binding Postcodes}"
                       SelectedItem="{Binding SelectedZip,Mode=TwoWay}"
                       Name="zip"
                       Margin="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />



        </Grid>
    </ScrollViewer>

</ContentDialog>
