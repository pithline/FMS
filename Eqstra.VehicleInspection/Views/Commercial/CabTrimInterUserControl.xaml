                    <TextBox Text="{Binding Path=Model.LeftDoorComment ,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Width="200" VerticalAlignment="Center" Margin="5 0" Grid.Column="3" Grid.Row="1"/>
