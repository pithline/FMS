                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding ImagePath,Mode=TwoWay}" Width="90" Height="90"/>
                            </DataTemplate>
                        </GridView.ItemTemplate>
