<ContentDialog x:Class="Eqstra.TechnicalInspection.DetailsDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:local="using:Eqstra.TechnicalInspection"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               mc:Ignorable="d"
               Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Pivot Title="DETAIL"
               Grid.Row="1">

            <Pivot.TitleTemplate>
                <DataTemplate>
                    <TextBlock FontSize="25"
                               Style="{StaticResource TextContentStyle}"
                               Text="{Binding }" />
                </DataTemplate>
            </Pivot.TitleTemplate>
            <Pivot.HeaderTemplate>
                <DataTemplate>
                    <TextBlock FontSize="55"
                               Style="{StaticResource TextContentStyle}"
                               Text="{Binding }" />
                </DataTemplate>
            </Pivot.HeaderTemplate>

            <PivotItem Header="task detail">

                <ScrollViewer  ScrollViewer.IsScrollInertiaEnabled="True"
                               x:Name="scrlViewTask"
                               ScrollViewer.IsVerticalRailEnabled="True"
                               ScrollViewer.IsDeferredScrollingEnabled="False"
                               ScrollViewer.VerticalScrollMode="Enabled"
                               ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <Grid VerticalAlignment="Top">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Vertical"
                                        HorizontalAlignment="Center"
                                        Margin="2">
                                <TextBlock HorizontalAlignment="Center"
                                           Text="Registration Number"
                                           Style="{StaticResource TextContentStyle}" />
                                <TextBlock HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Text="{Binding RegistrationNumber}"
                                           Style="{StaticResource InfoBoxTitleStyle}" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical"
                                        HorizontalAlignment="Center"
                                        Grid.Row="1"
                                        Margin="2">
                                <TextBlock HorizontalAlignment="Center"
                                           Text="Case Number"
                                           Style="{StaticResource TextContentStyle}" />
                                <TextBlock HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Text="{Binding CaseNumber}"
                                           Style="{StaticResource InfoBoxTitleStyle}" />
                            </StackPanel>

                            <StackPanel Orientation="Vertical"
                                        HorizontalAlignment="Center"
                                        Grid.Row="2"
                                        Margin="2">
                                <TextBlock HorizontalAlignment="Center"
                                           Text="Made"
                                           Style="{StaticResource TextContentStyle}" />
                                <TextBlock HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Text="{Binding Make}"
                                           Style="{StaticResource InfoBoxTitleStyle}" />
                            </StackPanel>


                            <StackPanel Orientation="Vertical"
                                        HorizontalAlignment="Center"
                                        Grid.Row="3"
                                        Margin="2">
                                <TextBlock HorizontalAlignment="Center"
                                           Text="Model"
                                           Style="{StaticResource TextContentStyle}" />
                                <TextBlock HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Text="{Binding Model}"
                                           Style="{StaticResource InfoBoxTitleStyle}" />
                            </StackPanel>

                            <StackPanel Orientation="Vertical"
                                        HorizontalAlignment="Center"
                                        Grid.Row="4"
                                        Margin="2">
                                <TextBlock HorizontalAlignment="Center"
                                           Text="Engine Number"
                                           Style="{StaticResource TextContentStyle}" />
                                <TextBlock HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Text="{Binding EngineNumber}"
                                           Style="{StaticResource InfoBoxTitleStyle}" />
                            </StackPanel>

                            <StackPanel Orientation="Vertical"
                                        HorizontalAlignment="Center"
                                        Grid.Row="5"
                                        Margin="2">
                                <TextBlock HorizontalAlignment="Center"
                                           Text="Status Due Date"
                                           Style="{StaticResource TextContentStyle}" />
                                <TextBlock HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Text="{Binding StatusDueDate}"
                                           Style="{StaticResource InfoBoxTitleStyle}" />
                            </StackPanel>

                            <StackPanel Orientation="Vertical"
                                        Grid.Row="6"
                                        HorizontalAlignment="Center"
                                        Margin="2">
                                <TextBlock HorizontalAlignment="Center"
                                           Text="Confirmed Date"
                                           Style="{StaticResource TextContentStyle}" />
                                <TextBlock HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Text="{Binding ConfirmedStDate}"
                                           Style="{StaticResource InfoBoxTitleStyle}" />
                            </StackPanel>


                            <StackPanel Orientation="Vertical"
                                        HorizontalAlignment="Center"
                                        Grid.Row="7"
                                        Margin="2">
                                <TextBlock HorizontalAlignment="Center"
                                           Text="Customer Name"
                                           Style="{StaticResource TextContentStyle}" />
                                <TextBlock HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Text="{Binding CustomerName}"
                                           Style="{StaticResource InfoBoxTitleStyle}" />
                            </StackPanel>

                            <StackPanel Orientation="Vertical"
                                        HorizontalAlignment="Center"
                                        Grid.Row="8"
                                        Margin="2">
                                <TextBlock HorizontalAlignment="Center"
                                           Text="Contact Name"
                                           Style="{StaticResource TextContentStyle}" />
                                <TextBlock HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Text="{Binding ContactName}"
                                           Style="{StaticResource InfoBoxTitleStyle}" />
                            </StackPanel>


                            <StackPanel Orientation="Vertical"
                                        HorizontalAlignment="Center"
                                        Grid.Row="9"
                                        Margin="2">
                                <TextBlock HorizontalAlignment="Center"
                                           Text="Address"
                                           Style="{StaticResource TextContentStyle}" />
                                <TextBlock HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Text="{Binding Address}"
                                           Style="{StaticResource InfoBoxTitleStyle}" />
                            </StackPanel>

                            <StackPanel Orientation="Vertical"
                                        Grid.Row="10"
                                        HorizontalAlignment="Center"
                                        Margin="2">
                                <TextBlock HorizontalAlignment="Center"
                                           Text="Status"
                                           Style="{StaticResource TextContentStyle}" />
                                <TextBlock HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Text="{Binding Status}"
                                           Style="{StaticResource InfoBoxTitleStyle}" />
                            </StackPanel>

                            <StackPanel Orientation="Vertical"
                                        HorizontalAlignment="Center"
                                        Grid.Row="11"
                                        Margin="2">
                                <TextBlock HorizontalAlignment="Center"
                                           Text="Email"
                                           Style="{StaticResource TextContentStyle}" />
                                <TextBlock HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Text="{Binding CusEmailId}"
                                           Style="{StaticResource InfoBoxTitleStyle}" />
                            </StackPanel>


                        </Grid>
                    </StackPanel>
                </ScrollViewer>

            </PivotItem>

            <PivotItem Header="customer detail">

                <ScrollViewer ScrollViewer.IsScrollInertiaEnabled="True"
                              x:Name="scrlViewCust"
                              ScrollViewer.IsDeferredScrollingEnabled="False"
                              ScrollViewer.IsVerticalRailEnabled="True"
                              ScrollViewer.VerticalScrollMode="Enabled"
                              ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <Grid VerticalAlignment="Top">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />

                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Vertical"
                                        HorizontalAlignment="Center"
                                        Margin="2">
                                <TextBlock HorizontalAlignment="Center"
                                           Text="Case Number"
                                           Style="{StaticResource TextContentStyle}" />
                                <TextBlock HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Text="{Binding CaseNumber}"
                                           Style="{StaticResource InfoBoxTitleStyle}" />
                            </StackPanel>

                            <StackPanel Orientation="Vertical"
                                        HorizontalAlignment="Center"
                                        Grid.Row="1"
                                        Margin="2">
                                <TextBlock HorizontalAlignment="Center"
                                           Text="Customer Name"
                                           Style="{StaticResource TextContentStyle}" />
                                <TextBlock HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Text="{Binding CustomerName}"
                                           Style="{StaticResource InfoBoxTitleStyle}" />
                            </StackPanel>


                            <StackPanel Orientation="Vertical"
                                        HorizontalAlignment="Center"
                                        Grid.Row="3"
                                        Margin="2">
                                <TextBlock HorizontalAlignment="Center"
                                           Text="Contact Name"
                                           Style="{StaticResource TextContentStyle}" />
                                <TextBlock HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Text="{Binding ContactName}"
                                           Style="{StaticResource InfoBoxTitleStyle}" />
                            </StackPanel>

                            <StackPanel Orientation="Vertical"
                                        HorizontalAlignment="Center"
                                        Grid.Row="4"
                                        Margin="2">
                                <TextBlock HorizontalAlignment="Center"
                                           Text="Address"
                                           Style="{StaticResource TextContentStyle}" />
                                <TextBlock HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Text="{Binding Address}"
                                           Style="{StaticResource InfoBoxTitleStyle}" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical"
                                        HorizontalAlignment="Center"
                                        Grid.Row="5"
                                        Margin="2">
                                <TextBlock HorizontalAlignment="Center"
                                           Text="Contact Number"
                                           Style="{StaticResource TextContentStyle}" />
                                <TextBlock HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Text="{Binding CustPhone}"
                                           Style="{StaticResource InfoBoxTitleStyle}" />
                            </StackPanel>

                            <StackPanel Orientation="Vertical"
                                        HorizontalAlignment="Center"
                                        Grid.Row="6"
                                        Margin="2">
                                <TextBlock HorizontalAlignment="Center"
                                           Text="Status Due Date"
                                           Style="{StaticResource TextContentStyle}" />
                                <TextBlock HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Text="{Binding StatusDueDate}"
                                           Style="{StaticResource InfoBoxTitleStyle}" />
                            </StackPanel>

                            <StackPanel Orientation="Vertical"
                                        HorizontalAlignment="Center"
                                        Grid.Row="7"
                                        Margin="2">
                                <TextBlock HorizontalAlignment="Center"
                                           Text="Confirmed Date"
                                           Style="{StaticResource TextContentStyle}" />
                                <TextBlock HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Text="{Binding StringifyConfirmedDate}"
                                           Style="{StaticResource InfoBoxTitleStyle}" />
                            </StackPanel>


                            <StackPanel Orientation="Vertical"
                                        HorizontalAlignment="Center"
                                        Grid.Row="8"
                                        Margin="2">
                                <TextBlock HorizontalAlignment="Center"
                                           Text="Status"
                                           Style="{StaticResource TextContentStyle}" />
                                <TextBlock HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Text="{Binding Status}"
                                           Style="{StaticResource InfoBoxTitleStyle}" />
                            </StackPanel>

                        </Grid>
                    </StackPanel>
                </ScrollViewer>

            </PivotItem>

        </Pivot>


    </Grid>
</ContentDialog>
