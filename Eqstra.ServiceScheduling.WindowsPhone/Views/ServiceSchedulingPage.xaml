<prism:VisualStateAwarePage x:Class="Eqstra.ServiceScheduling.WindowsPhone.Views.ServiceSchedulingPage"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:local="using:Eqstra.ServiceScheduling.WindowsPhone.Views"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            mc:Ignorable="d"
                            xmlns:prism="using:Microsoft.Practices.Prism.StoreApps"
                            xmlns:mvvm="using:Microsoft.Practices.Prism.Mvvm"
                            mvvm:ViewModelLocator.AutoWireViewModel="True"
                            xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
                            xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
                            Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <prism:VisualStateAwarePage.BottomAppBar>
        <CommandBar IsSticky="False"
                    ClosedDisplayMode="Compact">
            <CommandBar.SecondaryCommands>
                <AppBarButton Label="appointments"
                              Icon="Calendar"
                              x:Name="Calendar"
                              Click="Calendar_Click" />
                <AppBarButton Label="details"
                              Icon="NewWindow"
                              x:Name="Profile"
                              Click="More_Click" />
            </CommandBar.SecondaryCommands>
            <CommandBar.PrimaryCommands>
                <AppBarButton Icon="Accept"
                              Label="submit"
                              Command="{Binding NextPageCommand}" />

            </CommandBar.PrimaryCommands>

        </CommandBar>
    </prism:VisualStateAwarePage.BottomAppBar>
    <prism:VisualStateAwarePage.Resources>


    </prism:VisualStateAwarePage.Resources>

    <Hub>
        <HubSection Header="SERVICE SCHEDULING DETAIL"
                    Margin="0,15,0,0">
            <DataTemplate>
                <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto"
                              HorizontalAlignment="Stretch"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              ZoomMode="Disabled">
                    <Grid x:Name="LayoutRoot">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>


                        <TextBox  Width="330"
                                  Header="ODO Reading"
                                  Margin="0,2"
                                  Style="{StaticResource TextBoxContentStyle}"
                                  Text="{Binding Model.ODOReading,Mode=TwoWay}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center">
                        </TextBox>

                        <DatePicker  Width="330"
                                     Header="ODO Reading Date"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Date="{Binding Model.ODOReadingDt,Mode=TwoWay}"
                                     Grid.Row="1"
                                     Margin="0,2" />
                        
                        <StackPanel Grid.Row="2"
                                    Orientation="Horizontal">

                            <Image Source="{Binding Model.OdoReadingImageCapture.ImageBitmap}"
                                   Stretch="UniformToFill"
                                   Height="70"
                                   Width="90"
                                   Margin="5"
                                   HorizontalAlignment="Right"
                                  
                                   VerticalAlignment="Top">
                                <Interactivity:Interaction.Behaviors>
                                    <Core:EventTriggerBehavior EventName="Tapped">
                                        <Core:InvokeCommandAction  Command="{Binding OpenImageViewerCommand}" />
                                    </Core:EventTriggerBehavior>
                                </Interactivity:Interaction.Behaviors>
                               
                            </Image>
                            <AppBarButton HorizontalAlignment="Left"
                                          VerticalAlignment="Center"
                                          Icon="Camera"
                                          Command="{Binding TakePictureCommand}"
                                          CommandParameter="{Binding Model.OdoReadingImageCapture}">
                            </AppBarButton>
                        </StackPanel>

                        <ComboBox  Width="330"
                                   BorderBrush="{Binding StBorderBrush}"
                                   Grid.Row="3"
                                   Header="Service Type"
                                   ItemsSource="{Binding Model.ServiceType}"
                                   SelectedItem="{Binding Model.SelectedServiceType,Mode=TwoWay}"
                                   Margin="0,2"
                                   Style="{StaticResource ComboContentStyle}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />



                        <StackPanel Grid.Row="4"
                                    Background="{ThemeResource PhoneAccentBrush}">
                            <TextBlock Text="Preferred Service Details"
                                       TextAlignment="Center"
                                       Style="{StaticResource TextContentStyle}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="0,2"
                                       FontSize="25"
                                       Foreground="White" />
                        </StackPanel>

                        <StackPanel Orientation="Vertical"
                                    Grid.Row="5">
                            <DatePicker  Width="330"
                                         Header="Service Date (Option 1)"
                                         Date="{Binding Model.ServiceDateOpt1,Mode=TwoWay}"
                                         Margin="0,2"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center" />

                            <TimePicker  Width="330"
                                         VerticalAlignment="Center"
                                         Margin="0,2"
                                         HorizontalAlignment="Center"
                                         Time="{Binding Model.ServiceDateOpt1.TimeOfDay,Mode=TwoWay}" />
                        </StackPanel>

                        <StackPanel Orientation="Vertical"
                                    Grid.Row="6">
                            <DatePicker  Width="330"
                                         Header="Service Date (Option 2)"
                                         Date="{Binding Model.ServiceDateOpt2,Mode=TwoWay}"
                                         Margin="0,2"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center" />

                            <TimePicker Width="330"
                                        VerticalAlignment="Center"
                                        Margin="0,2"
                                        HorizontalAlignment="Center"
                                        Time="{Binding Model.ServiceDateOpt2.TimeOfDay,Mode=TwoWay}" />
                        </StackPanel>

                        <StackPanel Orientation="Vertical"
                                    Grid.Row="7">
                            <DatePicker  Width="330"
                                         IsHitTestVisible="False"
                                         Header="Confirmed/Prefered Date"
                                         Date="{Binding Model.ConfirmedDateDt,Mode=TwoWay}"
                                         Margin="0,2"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center" />

                            <TimePicker Width="330"
                                        VerticalAlignment="Center"
                                        Margin="0,2"
                                        HorizontalAlignment="Center"
                                        IsHitTestVisible="False"
                                        Time="{Binding Model.ConfirmedDateDt.TimeOfDay,Mode=TwoWay}" />
                        </StackPanel>


                        <StackPanel Grid.Row="8"
                                    Background="{ThemeResource PhoneAccentBrush}">
                            <TextBlock Text="Delivery Requirements"
                                       TextAlignment="Center"
                                       FontSize="25"
                                       Style="{StaticResource TextContentStyle}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="0,2"
                                       Foreground="White" />

                        </StackPanel>

                        <ToggleSwitch Grid.Row="9"
                                      OffContent="No"
                                      OnContent="Yes"
                                      Header="Lift Required"
                                      x:Name="liftRequired"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      IsOn="{Binding IsLiftRequired,Mode=TwoWay}"
                                      Margin="0,2"
                                      Style="{StaticResource DamagedToggleSwitch}" />


                        <ComboBox ItemsSource="{Binding Model.LocationTypes}"
                                  Grid.Row="10"
                                  BorderBrush="{Binding LtBorderBrush}"
                                  Header="Location Types"
                                  DisplayMemberPath="LocationName"
                                  Visibility="{Binding IsReqVisibility}"
                                  SelectedItem="{Binding Model.SelectedLocationType,Mode=TwoWay}"
                                  x:Name="ddLocationType"
                                  Margin="0,2"
                                  Width="330"
                                  Style="{StaticResource ComboContentStyle}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center" />




                        <ComboBox Grid.Row="11"
                                  Header="Destination Types"
                                  Visibility="{Binding IsReqVisibility}"
                                  ItemsSource="{Binding DestinationTypes}"
                                  BorderBrush="{Binding DtBorderBrush}"
                                  DisplayMemberPath="ContactName"
                                  SelectedItem="{Binding Model.SelectedDestinationType,Mode=TwoWay}"
                                  x:Name="ddDestinationTypes"
                                  Margin="0,2"
                                  Width="330"
                                  Style="{StaticResource ComboContentStyle}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center" />



                        <StackPanel Grid.Row="12"
                                    Orientation="Vertical"
                                    Visibility="{Binding IsReqVisibility}">
                            <TextBox  Width="330" IsHitTestVisible="False"
                                      Height="120"
                                      Header="Address"
                                      TextWrapping="Wrap"
                                      BorderBrush="{Binding AdBorderBrush}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Text="{Binding Model.Address,Mode=TwoWay}"
                                      Margin="0,2"
                                      Style="{StaticResource TextBoxContentStyle}"
                                      IsSpellCheckEnabled="True"
                                      IsTextPredictionEnabled="True"
                                      AcceptsReturn="True" />

                            <StackPanel Orientation="Horizontal">
                                <AppBarButton Icon="Add"
                                              HorizontalAlignment="Left"
                                              Label="Add"
                                              Command="{Binding AddCommand}" />

                                <AppBarButton Icon="Clear"
                                              HorizontalAlignment="Right"
                                              Label="Clear"
                                              Command="{Binding ClearCommand}" />
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    Grid.Row="16"
                                    Grid.RowSpan="2">
                            <TextBox  Width="280"
                                      Header="Additional Work"
                                      Height="120"
                                      Text="{Binding Model.AdditionalWork,Mode=TwoWay}"
                                      Margin="0,2"
                                      Style="{StaticResource TextBoxContentStyle}"
                                      IsSpellCheckEnabled="True"
                                      IsTextPredictionEnabled="True"
                                      AcceptsReturn="True"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center" />

                            <AppBarButton Icon="Microphone"
                                          VerticalAlignment="Center"
                                          Label="Microphone"
                                          Command="{Binding VoiceCommand}" />
                        </StackPanel>



                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Grid.Row="20">

                            <ComboBox  Width="290"
                                       Header="Select Supplier"
                                       BorderBrush="{Binding SpBorderBrush}"
                                       ItemsSource="{Binding PoolofSupplier}"
                                       SelectedItem="{Binding SelectedSupplier,Mode=TwoWay}"
                                       Margin="0,2"
                                       DisplayMemberPath="SupplierName"
                                       Style="{StaticResource ComboContentStyle}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />

                            <AppBarButton Icon="Filter"
                                          Label="Filter"
                                          HorizontalAlignment="Right"
                                          VerticalAlignment="Center"
                                          IsCompact="True"
                                          Name="filterSup"
                                          Click="filterSup_Click" />

                        </StackPanel>

                    </Grid>
                </ScrollViewer>
            </DataTemplate>
        </HubSection>
    </Hub>


</prism:VisualStateAwarePage>
