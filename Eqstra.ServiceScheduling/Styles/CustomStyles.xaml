<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:grid="using:Syncfusion.UI.Xaml.Grid">

    <Style x:Key="HighlightTextBoxtStyle"
           TargetType="TextBox">
        <Setter Property="BorderBrush"
                Value="Red"></Setter>
    </Style>

    <Style x:Key="HighlightComboBoxtStyle"
           TargetType="ComboBox">
        <Setter Property="BorderBrush"
                Value="Red"></Setter>
    </Style>


    <Style x:Key="HighlightSfDataGridtStyle"
           TargetType="grid:SfDataGrid">
        <Setter Property="BorderBrush"
                Value="Red"></Setter>

    </Style>
</ResourceDictionary>
